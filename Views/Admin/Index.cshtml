@{
    Layout = "_adminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Slider Yönetimi</h4>
    <a href="/Admin/Slider/Create" class="btn btn-sm btn-primary">
        <i class="fa-solid fa-plus"></i> Yeni Slider
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Başlık</th>
                    <th>Durum</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <!-- Örnek static data -->
                <tr>
                    <td>1</td>
                    <td>
                        <img src="/uploads/slider1.jpg" height="40" />
                    </td>
                    <td>Ana Sayfa Slider</td>
                    <td>
                        <span class="badge bg-success">Aktif</span>
                    </td>
                    <td class="text-end">
                        <a href="/Admin/Slider/Edit/1" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a href="/Admin/Slider/Delete/1" class="btn btn-sm btn-danger"
                           onclick="return confirm('Silmek istediğinize emin misiniz?')">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
