@model ProductModel

@{
    Layout = "_adminLayout";
}
<h2>Ürün Ekle</h2>

@using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)

    <div class="mb-3">
        @Html.LabelFor(x => x.ProductTitle, "Ürün Başlığı")
        @Html.TextBoxFor(x => x.ProductTitle, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.ProductDescription, "Ürün Açıklaması")
        @Html.TextBoxFor(x => x.ProductDescription, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(x => x.CategoryId, "Kategori Seçimi")
        @Html.DropDownListFor(
            x => x.CategoryId,
            new SelectList(ViewBag.Categories, "Id", "Name"),
            "Kategori Seçiniz",
            new { @class = "form-select" }
        )
    </div>

    <div class="mb-3">
        <label>Ürün Fotoğrafı</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/Admin/Products" class="btn btn-secondary">İptal</a>
}
