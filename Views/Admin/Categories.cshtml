@model List<ProductCategoryModel>

@{
    Layout = "_adminLayout.cshtml";

    List<ProductCategoryModel> result = Model;
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Kategori Yönetimi</h4>
    <a href="AddCategory" class="btn btn-sm btn-primary">
        <i class="fa-solid fa-plus"></i> Kategori Ekle
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
         @if(Model is not null){
        <table class="table table-striped mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Kategori Adı</th>
                    <th>Oluşturulma Tarihi</th>
                    <th class="text-end">Güncelle</th>
                </tr>
            </thead>
            <tbody>
                     @foreach(ProductCategoryModel entity in result)
                {
                    <tr>
                        <td> @entity.Name </td>
                        <td> @entity.CreatedDate </td>
                          <td class="text-end">
                        <a href="@Url.ActionLink("EditCategory", "Admin", new { id = entity.Id })" class="btn btn-warning">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a href="@Url.ActionLink("DeleteCategory", "Admin", new { id = entity.Id })" class="btn btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                        </td>
                    </tr>
                }   
               
            </tbody>
        </table>
        }
         else{
              <h5 class=" d-flex justify-content-center card-title">Veri Bulunamadı</h5>
            }
    </div>
</div>
