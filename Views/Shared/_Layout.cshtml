        }

        /* Hover efektlerini mobilde devre dƒ±≈üƒ± bƒ±rak */
        .hover-lift:hover {
          transform: none;
        }

        .card:hover .card-img-top {
          transform: none;
        }
      }

      @@media (min-width: 992px) {
        .navbar-nav {
          gap: 0.5rem;
        }
      }

      /* Tablet landscape i√ßin √∂zel ayar */
